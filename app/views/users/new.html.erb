<center><%= flash.now[:error] %></center>

<%= form_for @user do |f|%>
<div class="login">
  <%= f.label :username %>
  <br>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <br>
  <%= f.text_field :email %>
  <br>
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit %>
</div>

<% end %>
